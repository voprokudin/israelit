<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="MaterialHorizontalProgressBar" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="mpb_indeterminateTint">@color/progress_bar_color</item>
        <item name="mpb_showProgressBackground">false</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

</resources>
